{
  "compilerOptions": {
      "outDir": "build/dist",
      "module": "esnext",
      "target": "es6",
      "lib": [
          "es6",
          "dom",
          "esnext"
      ],
      "sourceMap": true,
      "allowJs": true,
      "jsx": "react",
      "moduleResolution": "node",
      "rootDir": "src",
      "forceConsistentCasingInFileNames": true,
      "noImplicitReturns": true,
      "noImplicitThis": true,
      "noImplicitAny": true,
      "importHelpers": true,
      "strictNullChecks": true,
      "noUnusedLocals": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "resolveJsonModule": true,
      "isolatedModules": true,
      "noEmit": true,
      "downlevelIteration": true,
      "noFallthroughCasesInSwitch": true
  },
  "exclude": [
      "node_modules",
      "build",
      "scripts",
      "acceptance-tests",
      "webpack",
      "jest",
      "src/setupTests.tsx"
  ],
  "include": [
      "src"
  ]
}