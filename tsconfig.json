{
    "compilerOptions": {
      "outDir": "build/dist",  // This ensures the compiled code goes into build/dist
      "module": "ESNext",       // Use ES modules for Lambda functions
      "target": "es6",          // Target ES6 for compatibility with Node.js
      "lib": ["es6", "dom", "esnext"],
      "sourceMap": true,        // Enable source maps for debugging
      "allowJs": true,          // Allow JavaScript files (if any)
      "jsx": "react",           // React JSX support if needed (probably not for Lambda)
      "moduleResolution": "bundler",
      "rootDir": "src",         // Root directory for your source files
      "strict": true,           // Enable strict type checking
      "esModuleInterop": true,  // Enable compatibility for ES modules
      "resolveJsonModule": true,
      "noEmit": false           // Don't emit if you're only using the bundle
    },
    "include": [
      "src/**/*"  // Include all files from the src folder
    ],
    "exclude": [
      "node_modules",  // Exclude node_modules from compilation
      "build"          // Exclude build folder (Webpack will handle this)
    ]
  }
  